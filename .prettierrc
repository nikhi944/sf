{
  "trailingComma": "none",
  "singleQuote": true,
  "tabWidth": 4,
  "printWidth": 120,
  "plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
  "overrides": [
    {
      "files": ["force-app/**/**/classes/*.cls"]
    },
    {
      "files": "force-app/**/**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    }
  ]
}
